<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         version="2.5"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name>Sarasavi Library</display-name>

  <!-- BookController -->
  <servlet>
    <servlet-name>BookController</servlet-name>
    <servlet-class>com.library.controllers.BookController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BookController</servlet-name>
    <url-pattern>/books</url-pattern>
  </servlet-mapping>

  <!-- UserController -->
  <servlet>
    <servlet-name>UserController</servlet-name>
    <servlet-class>com.library.controllers.UserController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserController</servlet-name>
    <url-pattern>/users</url-pattern>
  </servlet-mapping>

  <!-- TransactionController -->
  <servlet>
    <servlet-name>TransactionController</servlet-name>
    <servlet-class>com.library.controllers.TransactionController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TransactionController</servlet-name>
    <url-pattern>/transactions</url-pattern>
  </servlet-mapping>

</web-app>
